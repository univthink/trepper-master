<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Bio</th>
      <th>id</th>

      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users = User.all %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.bio %></td>
        <td><%= user.id %></td>
        <td><%= link_to 'Show', user %></td>
      <% if user.id == current_user.id %>  <td><%= link_to 'Edit', edit_users_path(user) %></td>
      <% end %>
        <td><%= link_to 'Logout', logout_path %></td>

      </tr>
    <% end %>
  </tbody>
</table>

