<h1>Welcome <%= current_user.first_name %></h1>
<%= form_for current_user, :url => {:action => 'save', controller => 'welcome'} do |f| %>
  <%= f.label :first_name %>:
  <%= f.text_field :first_name, :value => current_user.first_name %><br />

  <%= f.label :last_name %>:
  <%= f.text_field :last_name, :value => current_user.last_name %><br />

  <%= f.submit %>
  <% end %>
